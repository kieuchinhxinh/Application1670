<body>
    <div class="top-nav-staff"><a>FPT CO.</a></div>

    <span class="add-trainee-staff">Create A Trainee</span>

  <form class="w3-container" action="staffAddTrainee" target="_blank">
    <div class="w3-section">
      <label>Fullname</label>
      <input class="w3-input w3-border w3-hover-border-black" style="width:100%;" type="text" name="Name" required>
    </div>
    <div class="w3-section">
      <label>Email</label>
      <input class="w3-input w3-border w3-hover-border-black" style="width:100%;" type="text" name="Email" required>
    </div>
    <div class="w3-section">
      <label>Date Of Birth</label>
      <input class="w3-input w3-border w3-hover-border-black" style="width:100%;" name="Date" required>
    </div>
    <div class="w3-section">
      <label>Education</label>
      <input class="w3-input w3-border w3-hover-border-black" style="width:100%;" name="Education" required>
    </div>
    <button type="submit" class="w3-button w3-block w3-black">Send</button>
  </form>


    
</body>

